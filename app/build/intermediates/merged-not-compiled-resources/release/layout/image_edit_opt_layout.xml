<?xml version="1.0" encoding="utf-8"?>
<io.dcloud.feature.gallery.imageedit.view.WindowInsertLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_bg_top"
        android:id="@+id/dcloud_image_edit_head"
        android:fitsSystemWindows="true">

        <!--<TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="@string/image_cancel"
            android:textColor="@color/image_color_primary"
            android:textSize="16sp" />-->
        <ImageView
            android:id="@+id/tv_cancel"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/dcloud_gallery_edit_back"/>

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_bg_bottom"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:id="@+id/dcloud_image_edit_foot"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/layout_op_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <ViewSwitcher
                android:id="@+id/vs_op_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:measureAllChildren="true">

                <io.dcloud.feature.gallery.imageedit.view.IMGColorGroup
                    android:id="@+id/cg_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checkedButton="@+id/cr_red"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:id="@+id/cr_white"
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_white" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_black" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:id="@+id/cr_red"
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_red" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_yellow" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_green" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_blue" />

                    <io.dcloud.feature.gallery.imageedit.view.IMGColorRadio
                        android:layout_width="@dimen/image_color"
                        android:layout_height="@dimen/image_color"
                        android:layout_margin="@dimen/image_color_margin"
                        app:image_color="@color/image_color_purple" />

                </io.dcloud.feature.gallery.imageedit.view.IMGColorGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dcloud_gallery_edit_image_mosaic_tip"
                    android:textColor="@color/image_color_white"
                    android:textSize="12sp" />

            </ViewSwitcher>

            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:background="@null"
                android:contentDescription="@string/dcloud_gallery_edit_image_undo"
                android:onClick="onClick"
                android:layout_marginLeft="6dp"
                android:src="@drawable/image_btn_undo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/rg_modes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <RadioButton
                    android:id="@+id/rb_doodle"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:button="@null"
                    android:background="@mipmap/dcloud_gallery_edit_doodle"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="@dimen/image_mode_space"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btn_text"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/dcloud_gallery_edit_image_text"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:src="@mipmap/dcloud_gallery_edit_text"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="@dimen/image_mode_space"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_mosaic"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:button="@null"
                    android:background="@mipmap/dcloud_gallery_edit_mosaic"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="@dimen/image_mode_space"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btn_clip"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:contentDescription="@string/dcloud_gallery_edit_image_clip"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@mipmap/dcloud_gallery_edit_clip"
                    android:textColor="#FFF" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:layout_centerVertical="true"
                android:text="@string/dcloud_gallery_edit_image_done"
                android:textColor="@color/image_color_white"
                android:background="@drawable/image_btn_finish"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</io.dcloud.feature.gallery.imageedit.view.WindowInsertLinearLayout>