<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ad_dcloud_main_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/ad_dcloud_main_adtext"
        android:text="广告"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="12sp"
        android:background="@drawable/dcloud_ad_main_ad_tag"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"></TextView>

    <TextView
        android:text="跳 过"
        android:id="@+id/ad_dcloud_main_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/dcloud_ad_main_skip_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"></TextView>

</RelativeLayout>
