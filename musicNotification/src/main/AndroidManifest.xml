            android:name="xzh_page"
            android:value="pages/lock/lock"/>

        <meta-data
            android:name="xzh_favour"
            android:value="true"/>

        <meta-data
            android:name="xzh_theme_color"
            android:value="#55000000"/>

        <meta-data
            android:name="xzh_title_color"
            android:value="#ffffff"/>

        <meta-data
            android:name="xzh_artist_color"
            android:value="#ffffff"/>

        <meta-data
            android:name="xzh_account_name"
            android:value="1850070877@qq.com"/>
